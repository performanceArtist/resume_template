mixin circle-bar({name = 'Name', dotCount=6, length = 12} = {})
  .circle-bar 
    .circle-bar__text #{name}
    .circle-bar__dots
      - var counter = 0;
      while counter++ < length
        if counter <= dotCount
          .circle-bar__dot.circle-bar__dot_checked
        else
          .circle-bar__dot.circle-bar__dot_unchecked