include ../../components/title/title

mixin contact(options)
  -let defaults = {
  -  address:'Main Street, City.', 
  -  email:'contact@domain.com', 
  -  phone:'555-555-555', 
  -  website:'www.yourweb.com'
  -}
  -let validObject = Object.assign(defaults, options)
  -let info = [{
  -  key:'address',
  -},
  -{
  -  key:'email', 
  -  prependHref:'mailto: '
  -},
  -{
  -  key:'phone',
  -  prependHref:'tel: '
  - }, 
  - {
  -  key:'website',
  -  prependHref: 'http://'
  - }]
  .contact
    +title('fas fa-phone', 'CONTACT')

    each object in info
      .contact__info
        .contact__title #{object.key}
        a.contact__link(
          href = object.prependHref === undefined ? '' : object.prependHref + validObject[object.key]
        )
          | #{validObject[object.key]}
